<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 id="form-head">Edit Comment</h1>
        <div id="form-container">
            <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" value="<%= comment.text %>" class="form-control" name="comment[text]">
                </div>  
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>