<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Create a New Campground</h1>
        </div>
        <div class="col-md-6 col-lg-4 col-10 col-sm-8">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" placeholder="name" class="form-control" name="campground[name]">
                </div>
                <div class="form-group">
                    <input type="number" placeholder="price/night" class="form-control" name="campground[price]" min="0" step="1">
                </div>
                <div class="form-group">
                    <input type="text" placeholder="image url" class="form-control" name="campground[image]">
                </div>
                <div class="form-group">
                    <input type="text" placeholder="description" class="form-control" name="campground[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>