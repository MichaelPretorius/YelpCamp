<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 id="form-head">Edit <%= campground.name %></h1>
        
        <div id="form-container">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" value="<%= campground.name %>" class="form-control" name="campground[name]">
                </div>  
                <div class="form-group">
                    <input type="number" value="<%= campground.price %>" class="form-control" name="campground[price]" min="0" step="1">
                </div>
                <div class="form-group">
                    <input type="text" value="<%= campground.image %>" class="form-control" name="campground[image]">
                </div>
                <div class="form-group">
                    <input type="text" value="<%= campground.description %>" class="form-control" name="campground[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>