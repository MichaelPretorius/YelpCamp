<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Edit <%= campground.name %></h1>
        </div>
        <div class="col-md-6 col-lg-4 col-10 col-sm-8">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" value="<%= campground.name %>" class="form-control" name="campground[name]">
                </div>  
                <div class="form-group">
                    <input type="number" value="<%= campground.price %>" class="form-control" name="campground[price]" min="0" step="1">
                </div>
                <div class="form-group">
                    <input type="text" value="<%= campground.image %>" class="form-control" name="campground[image]">
                </div>
                <div class="form-group">
                    <input type="text" value="<%= campground.description %>" class="form-control" name="campground[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>